const messaging = firebase.messaging();

// Tangani pesan saat aplikasi di background
messaging.onBackgroundMessage(function(payload) {
  console.log('ðŸ“© Pesan background diterima:', payload);
  
  const notificationTitle = payload.notification.title;
  const notificationOptions = {
    body: payload.notification.body,
    icon: payload.notification.icon || '/icon-192x192.png',
    badge: '/badge-72x72.png',
    tag: 'tagihan-notification',
    renotify: true,
    requireInteraction: true,
    data: payload.data,
    // Tambahkan actions untuk notifikasi
    actions: [
      {
        action: 'view',
        title: 'Lihat Detail'
      },
      {
        action: 'close',
        title: 'Tutup'
      }
    ]
  };
  
  return self.registration.showNotification(notificationTitle, notificationOptions);
});

// Tangani klik notifikasi
self.addEventListener('notificationclick', function(event) {
  console.log('Notifikasi diklik:', event);
  event.notification.close();
  
  // Periksa action yang diklik
  if (event.action === 'view') {
    // Buka atau fokus ke aplikasi
    event.waitUntil(
      clients.matchAll({type: 'window', includeUncontrolled: true}).then(function(clientList) {
        for (var i = 0; i < clientList.length; i++) {
          var client = clientList[i];
          if ('focus' in client) {
            return client.focus();
          }
        }
        if (clients.openWindow) {
          return clients.openWindow('/');
        }
      })
    );
  }
  // Jika action 'close' atau tidak ada action, tidak perlu melakukan apa-apa
});

// Tangani event push
self.addEventListener('push', function(event) {
  console.log('Push event diterima:', event);
  
  if (event.data) {
    const data = event.data.json();
    const title = data.notification?.title || data.title || 'Notifikasi Tagihan';
    const options = {
      body: data.notification?.body || data.body || 'Ada pembaruan tagihan untuk Anda',
      icon: data.notification?.icon || data.icon || '/icon-192x192.png',
      badge: '/badge-72x72.png',
      tag: 'tagihan-push',
      renotify: true,
      requireInteraction: true,
      data: data.data || {},
      // Tambahkan actions untuk notifikasi
      actions: [
        {
          action: 'view',
          title: 'Lihat Detail'
        },
        {
          action: 'close',
          title: 'Tutup'
        }
      ]
    };
    
    event.waitUntil(
      self.registration.showNotification(title, options)
    );
  }
});

// Tangani refresh token
messaging.onTokenRefresh(function() {
  messaging.getToken()
    .then(function(refreshedToken) {
      console.log('Token FCM diperbarui di service worker:', refreshedToken);
      
      // Kirim token baru ke server
      return fetch('https://script.google.com/macros/s/AKfycbxCAqkAMTPa4qnTOwO4nj761GUPzbU4Jm1AZEUmbcqaBNkIIF_OkjidtWInS014C2Ye0A/exec', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({
          action: 'update_token',
          token: refreshedToken,
          waktu: new Date().toISOString()
        })
      });
    })
    .then(function(response) {
      return response.text();
    })
    .then(function(responseText) {
      console.log('âœ… Token diperbarui di server:', responseText);
    })
    .catch(function(err) {
      console.log('âŒ Gagal memperbarui token di server:', err);
    });
});

// Tangani sinkronisasi background (opsional)
self.addEventListener('sync', function(event) {
  if (event.tag === 'token-sync') {
    console.log('Melakukan sinkronisasi token di background');
    event.waitUntil(
      // Lakukan sinkronisasi token di sini
      Promise.resolve()
    );
  }
});

// Tangani notifikasi close (opsional)
self.addEventListener('notificationclose', function(event) {
  console.log('Notifikasi ditutup:', event);
  // Lakukan tindakan setelah notifikasi ditutup
});
